@model IEnumerable<EmployeeAttendance.Models.Employee>;
<div>
    
        <table class="table table-bordered table-striped">
            <thead>
                <tr>        
                    <th> Name </th>
                    <th> Age</th>
                    <th>Salary</th>
                    <th>Gender</th>
                    <th>DateOfBirth</th>
                  
            </tr>
        </thead>
      
        @foreach(Employee employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
            <td>@employee.Age</td>
            <td>@employee.Salary</td>
            <td>@employee.Gender</td>
            <td>@employee.DateOfBirth</td>
            <td><a asp-action="Edit" asp-controller="Employee" asp-route-Id = "@employee.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Employee" asp-route-Id="@employee.Id">Delete</a></td>

        </tr>
        }
    </table>
    <div class="container">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Employee">Create Employee</a>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            var successMessage = '@TempData["Success"]';
            var failureMessage = '@TempData["Failure"]';
            var successUpdateMessage = '@TempData["UpdateSuccess"]';
            var deleteSuccess = '@TempData["DeleteSuccess"]';
            if(successMessage) {
                toastr.success(successMessage,"Success");
            } else if (failureMessage) {
                toastr.error(failureMessage,"Error");
            }
            else if (successUpdateMessage)
            {
                toastr.success(successUpdateMessage,"Success");
            }
            else if (deleteSuccess)
            {
                toastr.success(deleteSuccess,"Success");
            }
        });
        
    </script>
}